<h2>Edit article</h2>

<!-- 
                                                метод put 
                        статьи_путь(выбранной статьи) => /articles/11/ 
    функция переменная {    э т о       в с ё        х е ш    } 
                       key: value,                     key: value    -->
<%= form_for :article, url: article_path(@article), method: :put do |f| %>

	<% if @article && @article.errors.any? %>
	<ul>
		 <% @article.errors.full_messages.each do |msg| %>

			<li><%= msg %></li>
		 
		 <% end %>
	</ul>
	<% end %>

	<p>
		<%= f.label :title%><br />
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :text%><br />
		<%= f.text_area :text %>
	</p>

	<p>
		<%= f.submit %>
	</p>

<% end %>